<%- include('../partials/header') %>

<main class="playlist-edit">
  <div class="edit-header">
    <h1>Edit Playlist</h1>
    <a href="/playlists/<%= playlist._id %>" class="btn btn-back">
      <i class="fas fa-arrow-left"></i> Back to Playlist
    </a>
  </div>

    <form action="/playlists/<%= playlist._id %>?_method=PUT" method="POST" enctype="multipart/form-data">    <div class="form-group">
      <label for="title" class="form-label">Playlist Title</label>
      <input type="text" id="title" name="title" class="form-input" value="<%= playlist.title %>" required>
    </div>

    <div class="form-group">
      <label for="description" class="form-label">Description</label>
      <textarea id="description" name="description" class="form-textarea">
        <%= playlist.description %>
    </textarea>
    </div>

    <div class="form-group">
      <label for="coverImage" class="form-label">Cover Image</label>
      <form action="/playlists/<%= playlist._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <input type="file" accept="image/*" name="coverImage">
      </form>
      <% if (playlist.coverImage) { %>
        <div class="current-image-preview">
          <p>Current Image:</p>
          <img src="<%= playlist.coverImage %>" alt="Current cover image" class="preview-image">
        </div>
      <% } %>
    </div>

    <div class="form-group">
      <label class="form-label">Visibility</label>
      <div class="radio-group">
        <label class="radio-option">
          <input type="radio" name="isPublic" value="false" <%= !playlist.isPublic ? 'checked' : '' %>>
          <span class="radio-label">Private</span>
        </label>
        <label class="radio-option">
          <input type="radio" name="isPublic" value="true" <%= playlist.isPublic ? 'checked' : '' %>>
          <span class="radio-label">Public</span>
        </label>

        <div class="current-songs">
        <% if (playlist.songs && playlist.songs.length > 0) { %>
          <ul>
            <% playlist.songs.forEach(song => { %>
              <li>
                <%= song.title %> - <%= song.artist %>
                <form action="/playlists/<%= playlist._id %>/songs/<%= song._id %>?_method=DELETE" 
                      method="POST" style="display:inline">
                  <button type="submit" class="btn-small btn-danger">
                    <i class="fas fa-times"></i>
                  </button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No songs in this playlist yet...</p>
        <% } %>
      </div>

        <div class="add-song-option">
          <a href="/songs/new?playlistId=<%= playlist._id %>" class="btn btn-primary">
           <i class="fas fa-plus"></i> Create New Song
          </a>

            <a href="/spotify/search?playlistId=<%= playlist._id %>" class="btn btn-spotify">
              <i class="fab fa-spotify"></i> Import from Spotify
            </a>
</div>

      </div>
    </div>

    <form action="/playlists/<%= playlist._id %>?_method=PUT" method="POST">
  <button type="submit">Save Changes</button>
</form>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>