<%- include('../partials/header') %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Songs</h1>
    <% if (user) { %>
      <a href="/songs/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Song
      </a>
    <% } %>
  </div>

  <% if (songs.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Duration</th>
            <th>Genre</th>
            <th>Added By</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% songs.forEach(song => { %>
            <tr>
              <td>
                <a href="/songs/<%= song._id %>">
                  <%= song.title %>
                </a>
              </td>
              <td><%= song.artist %></td>
              <td><%= song.duration || '--:--' %></td>
              <td><%= song.genre || 'N/A' %></td>
              <td>
                <% if (song.addedBy && song.addedBy.username) { %>
                  <%= song.addedBy.username %>
                <% } else { %>
                  Unknown
                <% } %>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <a href="/songs/<%= song._id %>" class="btn btn-sm btn-info">
                    <i class="fas fa-eye"></i>
                  </a>
                  <% if (user && song.addedBy && user._id == song.addedBy._id.toString()) { %>
                    <a href="/songs/<%= song._id %>/edit" class="btn btn-sm btn-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                    <form action="/songs/<%= song._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this song?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  <% } %>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      No songs found. <% if (user) { %>Would you like to <a href="/songs/new">add one</a>?<% } %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>