<%- include('../partials/header') %>

<main class="song-show">
  <div class="song-header">
    <h1 class="song-title"><%= song.title %></h1>
    <h2 class="song-artist"><%= song.artist %></h2>
    
    <div class="song-meta">
      <% if (song.duration) { %>
        <span class="song-duration"><%= song.duration %></span>
      <% } %>
      <% if (song.genre) { %>
        <span class="song-genre"><%= song.genre %></span>
      <% } %>
    </div>
    
    <% if (song.spotifyLink) { %>
      <a href="<%= song.spotifyLink %>" target="_blank" class="btn btn-spotify">
        <i class="fab fa-spotify"></i> Listen on Spotify
      </a>
    <% } %>
    
    <% if (song.addedBy && song.addedBy._id.toString() === user._id) { %>
      <div class="song-actions">
        <a href="/songs/<%= song._id %>/edit" class="btn btn-edit">
          <i class="fas fa-edit"></i> Edit
        </a>
        <form action="/songs/<%= song._id %>?_method=DELETE" method="POST" class="delete-form">
          <button type="submit" class="btn btn-delete">
            <i class="fas fa-trash"></i> Delete
          </button>
        </form>
      </div>
    <% } %>
  </div>
  
  <% if (song.playlists && song.playlists.length > 0) { %>
    <div class="playlists-section">
      <h3>Included in these playlists:</h3>
      <div class="playlist-grid">
        <% song.playlists.forEach(playlist => { %>
          <a href="/playlists/<%= playlist._id %>" class="playlist-card">
            <h4><%= playlist.title %></h4>
          </a>
        <% }) %>
      </div>
    </div>
  <% } %>
</main>

<%- include('../partials/footer') %>